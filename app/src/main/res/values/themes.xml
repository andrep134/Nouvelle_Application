<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Eebb" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/brand_maroon</item>
        <item name="colorPrimaryVariant">@color/brand_maroon_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/brand_green</item>
        <item name="colorSecondaryVariant">@color/brand_green</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        <item name="android:statusBarColor">@color/brand_maroon_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/brand_maroon</item>
        <item name="materialButtonStyle">@style/BethesdaButton</item>
        <item name="materialCardViewStyle">@style/BethesdaCard</item>
        <item name="android:textViewStyle">@style/BethesdaText</item>
        <item name="android:colorBackground">@color/sand_background</item>
    </style>

    <style name="BethesdaButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="BethesdaCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">22dp</item>
        <item name="cardElevation">10dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="BethesdaText" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>
